@model HomeViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/assets/css/reservation.css" />
    <title>Document</title>
</head>

<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-white">
                <div class="container-fluid">
                    <div>
                        <a asp-action="index" asp-controller="home" class="navbar-brand"><img src="~/assets/photos/icons8-train-64.png" alt="" /></a>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent" style="flex-grow: 0">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-action="index" asp-controller="home">HOME</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-action="index" asp-controller="ticket">TICKETS</a>
                            </li>
                            @if (User.IsInRole("Member"))
                            {                                
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" asp-action="Edit" asp-controller="Account">@User.Identity.Name.ToUpper()</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" asp-action="MyReservation" asp-controller="Account">RESERVATIONS</a>
                                </li>
                            }else
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" asp-action="Login" asp-controller="Account">LOGIN</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" asp-action="Register" asp-controller="Account">REGISTRATION</a>
                                </li>      
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div id="booking" class="section" style=" background-image: url('/assets/photos/212900-railway.jpg');">
        <div class="section-center">
            <div class="container">
                <div class="row">
                    <div class="booking-form">
                        <form asp-action="index" asp-controller="ticket">
                            <div class="row no-margin">
                                <div class="col-md-4">
                                    <div class="form-header">
                                        <h2>Book Now</h2>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="row no-margin">
                                        <div class="col-md-6">
                                            <div class="form-group" style="width: 280px;">
                                                <span class="form-label" style="font-size: 20px;">Departure date</span>
                                                <input name="datetime" id="datetime" class="form-control" type="datetime-local" style="font-size:23px" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-btn">
                                        <button type="submit" class="submit-btn">Check availability</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="river_header">
            <h1 class="text-center">Top Travel Destinations</h1>
        </div>
        <div class="container">
            <div class="row g-4 justify-content-center">
                @foreach(var item in Model.Tickets1)
                {
                    <a class="col-xs-12 col-md-6 col-lg-4 position-relative" asp-controller="ticket">
                            <img src="~/assets/photos/@item.ImageName" alt="" class="imgler3" />
                            <div class="imginclassi position-absolute bottom-0 start-0">
                                <h3>@item.From</h3>
                                <h3>@item.To</h3>
                                <p id="time">@item.DepartureTime.ToString("MMMM dd, yyy")</p>
                            </div>
                    </a>
                }
            </div>
        </div>
        <div class="river_buttone text-center"></div>
    </div>
    <div class="container">
        <div class="container">
           <div class="row g-4 justify-content-center">
                @foreach(var item in Model.Tickets1)
                {
                    <a class="col-xs-12 col-md-6 col-lg-4 position-relative" asp-controller="ticket">
                            <img src="~/assets/photos/@item.ImageName" alt="" class="imgler3" />
                            <div class="imginclassi position-absolute bottom-0 start-0">
                                <h3>@item.From</h3>
                                <h3>@item.To</h3>
                                <p id="time">@item.DepartureTime.ToString("MMMM dd, yyy")</p>
                            </div>
                    </a>
                }
            </div>
        </div>
        <div class="river_buttone text-center"></div>
    </div>
    <div class="hisse7">
        <div class="hisse7_header">
            <h1>Get in Touch</h1>
        </div>
        <div class="container">
            <div class="row justify-content-center g-3">
                <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                    <div class="bg-white" id="threekart">
                        <div class="hisse6icone">
                            <i class="bi bi-geo-alt fs-1 d-flex justify-content-center"></i>
                        </div>
                        <h3>Address</h3>
                        <div class="hisse6p">
                            <p>@Model.settings.Address1</p>
                            <p>@Model.settings.Address2</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                    <div class="bg-white" id="threekart">
                        <div class="hisse6icone">
                            <i class="bi bi-telephone-forward fs-1 d-flex justify-content-center"></i>
                        </div>
                        <h3>Phone</h3>
                        <div class="hisse6p">
                            <p>@Model.settings.PhoneNumber1</p>
                            <p>@Model.settings.PhoneNumber2</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                    <div class="bg-white" id="threekart">
                        <div class="hisse6icone">
                            <i class="bi bi-envelope fs-1 d-flex justify-content-center"></i>
                        </div>
                        <h3>Email</h3>
                        <div class="hisse6p">
                            <p>@Model.settings.Email1</p>
                            <p>@Model.settings.Email2</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="lastpart text-center">
            <p id="social">Our Social Media Accounts</p>

            <div class="lastparticone d-flex justify-content-center g-2">
                <a href="@Model.settings.Facebook">
                   <div class="iconess fs-3"><i class="bi bi-facebook"></i></div>
                </a>
                <a href="@Model.settings.Twitter">
                   <div class="iconess fs-3"><i class="bi bi-twitter"></i></div>
                </a>
                <a href = "@Model.settings.Instagram">

                <div class="iconess fs-3"><i class="bi bi-instagram"></i></div>
                </a>
                <a href = "@Model.settings.Linkedin">

                <div class="iconess fs-3"><i class="bi bi-linkedin"></i></div>
                </a>
            </div>
            <hr />
            <div class="finally">
                <p id="c2022">c 2022 Azerbaijan railways</p>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>